print('CALCULADORA DE CONSUMO')
print('Escolha o tipo de instalação:')
print('r - Residencial')
print('c - Comercial')
print('i - Industrial')


tipo = (input('Digite a sigla correspondente ao seu tipo de instalação: '))
consumo = int(input('Digite o consumo em kWh: '))



#CONSUMO RESIDENCIAL ABAIXO DE 500kWh

if tipo == 'r' and consumo <= 500:
    preco = consumo * 0.40
    print('Faixa (kWh): até 500. Preço: R$0,40')
    print(f'Sua instalação é residencial, com consumo de {consumo} kWh.')
    print(f'Valor da fatura: R${preco} reais')

#CONSUMO RESIDENCIAL ACIMA DE 500kWh    

elif tipo == 'r' and consumo > 500:
    preco = consumo * 0.65
    print('Faixa (kWh): acima de 500. Preço:R$0,65')
    print(f'Sua instalação é residencial, com consumo de {consumo} kWh.')
    print(f'Valor da fatura: R${preco} reais')

#CONSUMO COMERCIAL ABAIXO DE 500kWh    

elif tipo == 'c' and consumo <= 1000:
    preco = consumo * 0.55
    print('Faixa (kWh): até 1000. Preço:R$0,55')
    print(f'Sua instalação é comercial, com consumo de {consumo} kWh.')
    print(f'Valor da fatura: R${preco} reais')

#CONSUMO COMERCIAL ACIMA DE 500kWh    

elif tipo == 'c' and consumo > 1000:
    preco = consumo * 0.60
    print('Faixa (kWh): acima de 1000. Preço:R$0,60')
    print(f'Sua instalação é comercial, com consumo de {consumo} kWh.')
    print(f'Valor da fatura: R${preco} reais')    

#CONSUMO INDUSTRIAL ABAIXO DE 5000kWh    

elif tipo == 'i' and consumo <= 5000:
    preco = consumo * 0.55
    print('Faixa (kWh): até 5000. Preço:R$0,55')
    print(f'Sua instalação é industrial, com consumo de {consumo} kWh.')
    print(f'Valor da fatura: R${preco} reais')

#CONSUMO INDUSTRIAL ACIMA DE 5000kWh    

elif tipo == 'i' and consumo > 5000:
    preco = consumo * 0.60
    print('Faixa (kWh): acima de 5000. Preço:R$0,60')
    print(f'Sua instalação é industrial, com consumo de {consumo} kWh.')
    print(f'Valor da fatura: R${preco} reais')

else:
    print('Dados inválidos')



     
          


